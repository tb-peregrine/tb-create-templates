
DESCRIPTION >
    API endpoint to track conversion metrics over time for each variant in an A/B test

NODE test_metrics_over_time_node
SQL >
    %
    SELECT 
        test_id,
        variant,
        toDate(timestamp) as date,
        count(DISTINCT user_id) as daily_users,
        countIf(event_type = 'conversion' AND event_name = {{String(metric, 'purchase')}}) as daily_conversions,
        countIf(event_type = 'conversion' AND event_name = {{String(metric, 'purchase')}}) / count(DISTINCT user_id) as daily_conversion_rate,
        sum(CASE WHEN event_type = 'revenue' THEN value ELSE 0 END) as daily_revenue
    FROM ab_test_events
    WHERE test_id = {{String(test_id, '')}}
    {% if defined(start_date) %}
        AND timestamp >= {{DateTime(start_date, '2023-01-01 00:00:00')}}
    {% end %}
    {% if defined(end_date) %}
        AND timestamp <= {{DateTime(end_date, '2023-12-31 23:59:59')}}
    {% end %}
    GROUP BY test_id, variant, date
    ORDER BY date ASC, variant ASC

TYPE endpoint
        