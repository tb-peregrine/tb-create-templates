
DESCRIPTION >
    API endpoint to list all active A/B tests

NODE active_tests_node
SQL >
    %
    SELECT 
        test_id,
        test_name,
        description,
        start_date,
        end_date,
        variants,
        primary_metric,
        secondary_metrics,
        status
    FROM ab_test_definitions
    WHERE status = {{String(status, 'active')}}
    {% if defined(start_date) %}
        AND start_date >= {{DateTime(start_date)}}
    {% end %}
    {% if defined(end_date) %}
        AND end_date <= {{DateTime(end_date)}}
    {% end %}
    ORDER BY start_date DESC

TYPE endpoint
        